@model TrueJobs.Job

@{
    ViewBag.Title = "Details";
}


<head>
    <link href="~/Content/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-image: linear-gradient(rgba(0, 142, 99, 0.1), rgba(0, 0, 0, 0.1)), url('../../Content/img_biz/1.jpg');
            background-size: cover;
            background-attachment: fixed;
        }

        a:hover {
            text-decoration: none;
        }
    </style>

</head>



<main id="main" style="margin-top:100px">

    <br />
    <br />
    <br />


    <section class="content">


        <h3>@Model.Name</h3>

        @if (User.Identity.IsAuthenticated) { 
        <a href="@Url.Action("Aplica", "Jobs", new { id = Model.Job_ID})" class="btn btn-default"><b>Aplica la job</b></a>
        
        }
        <br />
        <br />
        <div class="row">
            <div class="col-md-3">


                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Detalii</h3>
                    </div>


                    <div class="box-body">
                        <strong><i class="fa fa-location-arrow margin-r-5"></i>Locatie</strong>
                        <div class="form-group">
                            <div class="col-md-12">
                                <p> @Model.Location</p>
                            </div>
                        </div>

                        <hr>
                        <strong><i class="fa fa-phone margin-r-5"></i>Nume companie</strong>
                        <div class="form-group">
                            <div class="col-md-12">
                                <p>@ViewBag.nume</p>
                            </div>
                        </div>

                        <hr>
                        <strong><i class="fa fa-envelope margin-r-5"></i>Email companie</strong>
                        <div class="form-group">
                            <div class="col-md-12">
                                <p>@ViewBag.emailcompanie</p>
                            </div>
                        </div>
                        <hr>
                        <strong><i class="fa fa-phone margin-r-5"></i>Telefon companie</strong>
                        <div class="form-group">
                            <div class="col-md-12">
                                <p>@ViewBag.telefon</p>
                            </div>
                        </div>



                    </div>
                    <!-- /.box-body -->
                </div>



            </div>

            <div class="col-md-9">

                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class=""><a href="#activity" data-toggle="tab">Detalii job</a></li>
                        <li><a href="#timeline" data-toggle="tab">Joburi similare</a></li>

                    </ul>

                    <div class="tab-content">
                        <div class="active tab-pane" id="activity">
                            <p><b>Interes</b></p> <br />
                            <p>@Model.Interest.Name</p>
                            <p><b>Descriere</b></p> <br />
                            <p>@Model.Description</p>
                            <br />
                            <p><b>Cerinte</b></p> <br />
                            <p>@Model.Requirements</p>
                            <p><b>Tip</b></p> <br />
                            <p>@Model.Type</p>
                            <p><b>Experienta necesara</b></p> <br />
                            <p>@Model.Experience</p>
                            <p><b>Atribute</b></p> <br />
                            <p>@Model.Attributes</p>
                        </div>

                        <div class="tab-pane" id="timeline">
                            <p>Sim</p>

                            @Html.Action("SimilarJobs", "Jobs", new { ID = Model.Job_ID })
                        </div>

                    </div>
                </div>
            </div>




    </section>
</main>

