@model Booktopia.Models.Book
@{
    ViewBag.Title = "BookManagement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Book Index - Table Style *@
@section Styles{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/dt-1.10.18/datatables.min.css" />
    <link href="~/Content/General/BookManagement.css" rel="Stylesheet" type="text/css" />
}

@section Scripts{
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs/dt-1.10.18/datatables.min.js" defer></script>
    <script src="~/Scripts/General/BookManagement.js" defer></script>
}
<style>
    .w-49p {
        width: 49%;
    }
</style>

<div class="container">
    <table class="table table-hover" id="books-table">
        <thead>
            <tr>
                <th class="tbl-col-1">@Html.DisplayNameFor(model => model.BookId)</th>
                <th class="tbl-col-2">@Html.DisplayNameFor(model => model.Titlu)</th>
                <th class="tbl-col-3">@Html.DisplayNameFor(model => model.Autor)</th>
                <th class="tbl-col-4">@Html.DisplayNameFor(model => model.Pret)</th>
                <th class="tbl-col-5">@Html.DisplayNameFor(model => model.Status)</th>
                <th class="tbl-col-6"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in ViewBag.books)
            {
                <tr>
                    <input type="hidden" name="BookId" value="@book.BookId" />
                    <td class="tbl-col-1">@book.BookId</td>
                    <td class="tbl-col-2">@book.Titlu</td>
                    <td class="tbl-col-3">@book.Autor</td>
                    <td class="tbl-col-4">@book.Pret</td>
                    <td class="tbl-col-5">@book.Status</td>
                    <td class="tbl-col-6">
                        <button type="button" class="btn btn-info w-49p book-show-btn">
                            <i class="far fa-eye"></i> Vezi
                        </button>
                        <button type="button" class="btn btn-warning w-49p book-edit-btn">
                            <i class="far fa-edit"></i> Modifică
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>